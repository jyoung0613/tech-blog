<div class="container-fluid">
    <div class="row">

        <div class="col-md-5 gx-4 mb-4">
            <section class="welcome">
                <h2><strong>Welcome to The Tech Blog!</strong></h2>
                <p>Join your fellow community of bloggers to:</p>
                <ul >
                    <li>Upload your own articles</li>
                    <li>Comment on posted articles</li>
                </ul>
                <p>Sign up for a <strong>FREE</strong> account today!</p>
            </section>
        </div>

        <div class="col-md-5 gx-4 mb-4">
            <section class="sign-up-form">
                <h2>Sign Up</h2>
                <form class="signupForm">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" class="form-control" id="username-signup" placeholder="Enter Username">
                        <small id="usernameHelp" class="form-text text-muted">Your username should be between 2 and 36 characters in length.</small>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password-signup" placeholder="Enter Password">
                        <small id="passwordHelp" class="form-text text-muted">Your password should be a minimum of 8 characters in length.</small>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-primary" id="btn-signup" type="submit">Sign Up</button>
                        <div><a class="btn my-2" id="btn-signin" href="/signin" rel="noreferrer noopener"><span>Already on The Tech Blog? <strong>Sign In</strong></span></a></div>
                    </div>
                </form>
            </section>
        </div>

    </div>
</div>

<script src="./js/signup.js"></script>