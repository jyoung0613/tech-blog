<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Update Article</h2>
            <small id="updateArticleHelp" class="form-text text-muted">NOTE: The title and content fields cannot be left blank.</small>
            <form class="updateArticleForm">
                <div class="form-group">
                    <lable for="article-title">Title</lable>
                    <input type="text" class="form-control" id="articleTitle" required="true" value="{{article.title}}">
                </div>
                <div class="form-group">
                    <label for="article-content">Content</label>
                    <textarea type="text" class="form-control" id="articleContent" rows="10" required="true" value="{{article.content}}">{{article.content}}</textarea>
                </div>
                <button class="btn btn-primary" id="btn-save" data-id="{{article.id}}" type="submit">Save</button>
                <button class="btn btn-warning" id="btn-cancel" type="reset">Cancel</button>
            </form>
        </div>
    </div>
</div>


<script src="../public/js/updateArticle.js"></script>